{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "outDir": "dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
